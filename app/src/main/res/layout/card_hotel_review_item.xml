<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/review_details"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_name"
                android:text="Pride Hotel Nagpur"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_text"
                android:layout_below="@+id/hotel_name"
                android:layout_marginTop="5dp"
                android:text="Address : Opposite Nagpur Airport, Wardha Road, Sonegaon, Nagpur, Maharashtra - 440025"
                android:maxLines="3"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hotel_contact"
                android:layout_below="@+id/hotel_address"
                android:layout_marginTop="3dp"
                android:text="Phone:0712 666 0288"
                android:maxLines="3"
                android:textSize="10sp"
                android:textStyle="bold"/>-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hote_map_review_details"
            android:layout_weight="1.5">

            <!-- MapView in lite mode. Note that it needs to be initialised
     programmatically before it can be used. -->


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/review_rating"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.7"
            android:background="@drawable/custom_rectangle_green"
            android:gravity="center"
            android:padding="3dp"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold" />



        <!--me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hotel_reviews_count"
        android:text="(45)"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginLeft="3dp"/-->

    </LinearLayout>

</android.support.v7.widget.CardView>